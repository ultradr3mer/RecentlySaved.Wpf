<Window  xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" xmlns:interactivity="http://prismlibrary.com/" x:Class="RecentlySaved.Wpf.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:designTime="clr-namespace:RecentlySaved.Wpf.ViewModels.DesignTime"
        xmlns:local="clr-namespace:RecentlySaved.Wpf.Views"
        WindowStyle="None" 
        xmlns:prism="http://prismlibrary.com/" xmlns:Controls="clr-namespace:RecentlySaved.Wpf.Views.Controls"
                  mc:Ignorable="d"
        d:DataContext ="{d:DesignInstance {x:Type designTime:MainWindowViewModelDesignTime}, IsDesignTimeCreatable=True}"
        prism:ViewModelLocator.AutoWireViewModel="True"
         Loaded="MetroWindowLoaded" 
        Title="MainWindow" Height="450" Width="1600"
       Background="Transparent">
  <WindowChrome.WindowChrome>
    <WindowChrome GlassFrameThickness="-1" CaptionHeight="0" />
  </WindowChrome.WindowChrome>
  <Grid Background="#99272727">
    <Grid x:Name="ContentGrid" Margin="0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="32" />
      </Grid.ColumnDefinitions>
      <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Stretch" >
        <Button TextOptions.TextFormattingMode="Display" Content="" FontFamily="Segoe MDL2 Assets" FontSize="10" Width="32" Height="46" Style="{DynamicResource MahApps.Styles.Button.SquareMinMax}" Click="PopUpClick" />
        <Button TextOptions.TextFormattingMode="Display" Content="" FontFamily="Segoe MDL2 Assets" FontSize="10" Width="32" Height="46" Style="{DynamicResource MahApps.Styles.Button.SquareMinMax}" Click="MinimizeClick" />
        <!--<Button TextOptions.TextFormattingMode="Display" Content="" FontFamily="Segoe MDL2 Assets" FontSize="10" Width="32" Height="46" Style="{DynamicResource MahApps.Styles.Button.SquareMinMax}" Click="MaximizeClick" />-->
        <Button TextOptions.TextFormattingMode="Display" Content="" FontFamily="Segoe MDL2 Assets" FontSize="10" Width="32" Height="46" Style="{DynamicResource MahApps.Styles.Button.SquareClose}" Click="CloseClick" />
      </StackPanel>
      <Grid Grid.Row="2">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="10"/>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="10"/>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="10"/>
          <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="30"/>
          <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Recent Files"/>
        <ContentControl Grid.Row="1" prism:RegionManager.RegionName="RecentFilesRegion" UseLayoutRounding="True" />
        <Rectangle Width="1" Grid.Column="1"  Grid.RowSpan="2" Fill="{StaticResource MahApps.Brushes.Control.Border}" VerticalAlignment="Stretch" HorizontalAlignment="Center" Margin="0,20,0,20"/>
        <Label Grid.Row="0" Grid.Column="2" Content="Clipoard History"/>
        <ContentControl Grid.Column="2" Grid.Row="1" prism:RegionManager.RegionName="ClipboardHistRegion" UseLayoutRounding="True" />
        <Rectangle Width="1" Grid.Column="3"  Grid.RowSpan="2" Fill="{StaticResource MahApps.Brushes.Control.Border}" VerticalAlignment="Stretch" HorizontalAlignment="Center" Margin="0,20,0,20"/>
        <Label Grid.Row="0" Grid.Column="4" Content="Pinned"/>
        <ContentControl Grid.Column="4" Grid.Row="1" prism:RegionManager.RegionName="ClipboardPinnedRegion" UseLayoutRounding="True" />
        <Rectangle Width="1" Grid.Column="5"  Grid.RowSpan="2" Fill="{StaticResource MahApps.Brushes.Control.Border}" VerticalAlignment="Stretch" HorizontalAlignment="Center" Margin="0,20,0,20"/>
        <ContentControl Grid.Column="6" Grid.Row="1" prism:RegionManager.RegionName="Preview" UseLayoutRounding="True" />
        <Label Grid.Row="0" Grid.Column="6" Content="Preview"/>
      </Grid>
    </Grid>
  </Grid>
</Window>
