<UserControl x:Class="RecentlySaved.Wpf.Views.Controls.FileCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RecentlySaved.Wpf.Views.Controls"
             mc:Ignorable="d" 
             Height="64" Width="256">
    <Border VerticalAlignment="Stretch" HorizontalAlignment="Stretch" BorderBrush="{StaticResource MahApps.Brushes.Control.Border}" BorderThickness="1" Margin="5">
        <Grid Background="{StaticResource MahApps.Brushes.Control.Background}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label Content="Content={Binding Title}" />
            <Label Grid.Row="2" Content="Content={Binding Description}" FontSize="10" />
        </Grid>
    </Border>
</UserControl>
